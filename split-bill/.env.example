# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://splitbill:splitbill_password@localhost:5432/splitbill?schema=public"

# Docker PostgreSQL credentials
POSTGRES_USER=splitbill
POSTGRES_PASSWORD=splitbill_password
POSTGRES_DB=splitbill

# ============================================
# NEXTAUTH
# ============================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-super-secret-key-min-32-characters"
NEXTAUTH_URL="http://localhost:3000"

# ============================================
# EMAIL (SendGrid)
# ============================================
EMAIL_FROM="noreply@splitbill.com"
EMAIL_REPLY_TO="support@splitbill.com"
SENDGRID_API_KEY="SG.your-sendgrid-api-key-here"
# Get your API key from: https://app.sendgrid.com/settings/api_keys
# Free tier: 100 emails/day

# ============================================
# EXTERNAL APIs
# ============================================
# ExchangeRate API (free tier - 1,500 requests/month)
EXCHANGE_RATE_API_URL="https://api.exchangerate-api.com/v4/latest"
# No API key required for free tier

# ============================================
# APPLICATION
# ============================================
NODE_ENV="development"
PORT=3000

# ============================================
# SECURITY
# ============================================
# Rate limiting (requests per 15 minutes)
RATE_LIMIT_MAX=100

# CORS allowed origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,https://yourdomain.com"
